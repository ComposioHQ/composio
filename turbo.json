{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsdown.config.ts",
        "../../../tsdown.config.base.ts"
      ],
      "outputs": ["dist/"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["dist/"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  }
}
