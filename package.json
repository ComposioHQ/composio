{
  "name": "composio",
  "version": "0.1.0-rc.9",
  "private": true,
  "description": "",
  "workspaces": [
    "packages/core",
    "packages/providers/*"
  ],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test --filter=./packages/**",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "create:provider": "bash scripts/create-provider.sh",
    "check:peer-deps": "tsx scripts/check-peer-deps.ts",
    "update:peer-deps": "tsx scripts/update-peer-deps.ts",
    "publish": "lerna publish --no-private",
    "prepublish": "pnpm run build"
  },
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@types/node": "^22.15.18",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lerna": "^8.2.2",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "semver": "^7.7.2",
    "tsx": "^4.19.3",
    "turbo": "^2.5.0",
    "typescript-eslint": "^8.31.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
