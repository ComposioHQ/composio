{
  "name": "composio",
  "version": "0.1.12-alpha.1",
  "private": true,
  "description": "",
  "workspaces": [
    "packages/core",
    "packages/json-schema-to-zod",
    "packages/providers/*",
    "fern"
  ],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test --filter=./packages/**",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:packages": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:fix:packages": "eslint packages --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "create:provider": "bash scripts/create-provider.sh",
    "create:example": "bash scripts/create-example.sh",
    "check:peer-deps": "tsx scripts/check-peer-deps.ts",
    "update:peer-deps": "tsx scripts/update-peer-deps.ts",
    "prepublish": "pnpm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "pnpm run build && changeset publish",
    "changeset:pre-enter": "changeset pre enter alpha",
    "changeset:pre-exit": "changeset pre exit alpha"
  },
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^22.15.18",
    "@vitest/ui": "^3.1.4",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "semver": "^7.7.2",
    "tsx": "^4.19.3",
    "turbo": "^2.5.0",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.4",
    "zod": "^3.24.2"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/**/*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
