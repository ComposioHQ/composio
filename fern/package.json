{
	"name": "composio-docs",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@10.17.0",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"clean": "git clean -xdf node_modules",
		"compile": "npx tailwindcss -i ./assets/input.css -o ./dist/output.css",
		"tools:generate": "uv run generators/tool_doc_generator/main.py --workers 10",
		"tools:generate:dev": "uv run generators/tool_doc_generator/main.py --workers 10 --limit ${LIMIT:-5}",
		"sdkdocs": "pnpm run sdkdocs:ts && pnpm run sdkdocs:python",
		"sdkdocs:ts": "pnpm exec typedoc",
		"sdkdocs:python": "uv run python generators/python_sdk/generate_docs.py",
		"css:compile": "npx tailwindcss -i ./assets/input.css -o ./dist/output.css",
		"css:watch": "npx tailwindcss -i ./assets/input.css -o ./dist/output.css --watch",
		"api:pull": "bash scripts/pull-openapi-spec.sh",
		"snippets:build": "bun run scripts/build-snippets.ts",
		"snippets:dev": "bun watch scripts/build-snippets.ts --watch",
		"add-og": "uv run scripts/add_og_imgs.py",
		"check": "fern check",
		"dev": "bun run scripts/build-snippets.ts && (bun run scripts/build-snippets.ts --watch & fern docs dev)",
		"dev:docs": "fern docs dev",
		"links": "fern docs broken-links",
		"build": "echo 'Build orchestrated by Turbo'",
		"preview": "fern generate --docs --preview --log-level debug",
		"publish": "fern generate --docs",
		"generate": "pnpm tools:generate && pnpm sdkdocs",
		"snippet:new": "bun run scripts/snippet-new.ts",
		"doc:new": "bun run scripts/doc-new.ts",
		"llms:build": "bun run scripts/build-llms-txt.ts",
		"llms:dev": "bun run scripts/build-llms-txt.ts --watch",
		"llms:deploy": "turbo run deploy --filter=@composio/llms-txt-worker"
	},
	"dependencies": {
		"fern-api": "^0.51.39",
		"gray-matter": "^4.0.3",
		"supergateway": "^3.4.3"
	},
	"devDependencies": {
		"@ai-sdk/anthropic": "^1.2.12",
		"@anthropic-ai/sdk": "^0.52.0",
		"@composio/core": "workspace:*",
		"@composio/google": "workspace:*",
		"@composio/langchain": "workspace:*",
		"@composio/llamaindex": "workspace:*",
		"@composio/openai": "workspace:*",
		"@composio/openai-agents": "workspace:*",
		"@composio/vercel": "workspace:*",
		"@google/genai": "^1.1.0",
		"@langchain/langgraph": "^0.2.72",
		"@langchain/openai": "^0.5.10",
		"@llamaindex/openai": "^0.4.20",
		"@llamaindex/workflow": "^1.1.24",
		"@openai/agents": "^0.2.1",
		"@types/convict": "^6.1.6",
		"@types/glob": "^8.1.0",
		"@types/node": "^20.17.57",
		"@types/react": "^18.3.23",
		"@types/yaml": "^1.9.7",
		"ai": "catalog:",
		"composio-core": "^0.5.39",
		"hono": "^4.7.11",
		"messages": "link:@langchain/core/messages",
		"next": "^15.3.3",
		"only-allow": "^1.2.1",
		"openai": "^6.16.0",
		"react": "^18.3.1",
		"tailwindcss": "^3.4.17",
		"typedoc": "^0.28.5",
		"typedoc-plugin-markdown": "^4.6.4",
		"typedoc-plugin-zod": "^1.4.1",
		"typescript": "catalog:",
		"uuid": "catalog:",
		"vitest": "catalog:",
		"yaml": "^2.8.0"
	}
}