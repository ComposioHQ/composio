{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "../packages/core/src/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**",
    "**/tests/**",
    "**/node_modules/**"
  ]
}