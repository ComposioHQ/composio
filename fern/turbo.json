{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["api:pull", "add-og", "snippets:build", "tools:generate", "sdkdocs", "llms:build"],
      "outputs": ["apis/openapi.yml", "apis/openapi-mcp.json", "pages/dist/**", "tools/**", "llms-txt/public/llms.txt"],
      "cache": true
    },
    
    "dev:deps": {
      "dependsOn": ["api:pull", "add-og", "sdkdocs", "tools:generate:dev", "snippets:build"],
      "cache": false
    },
    
    "dev": {
      "dependsOn": ["dev:deps"],
      "persistent": true,
      "cache": false
    },
    
    "dev:all": {
      "dependsOn": ["dev:deps"],
      "persistent": true,
      "cache": false
    },
    
    "api:pull": {
      "outputs": ["apis/openapi.yml", "apis/openapi-mcp.json"],
      "cache": true
    },
    
    "add-og": {
      "inputs": ["scripts/add_og_imgs.py", "pages/**/*.mdx"],
      "cache": false
    },
    
    "snippets:build": {
      "dependsOn": ["^build"],
      "outputs": ["pages/dist/**"],
      "inputs": ["scripts/build-snippets.ts", "snippets/**", "docs/**"],
      "cache": true
    },
    
    "snippets:dev": {
      "persistent": true,
      "cache": false
    },
    
    "tools:generate": {
      "outputs": ["tools/**"],
      "inputs": ["generators/tool_doc_generator/**/*.py", "generators/tool_doc_generator/templates/**/*"],
      "cache": true,
      "env": ["COMPOSIO_API_KEY"]
    },
    "tools:generate:dev": {
      "cache": false,
      "inputs": ["generators/tool_doc_generator/**/*.py", "generators/tool_doc_generator/templates/**/*"],
      "env": ["COMPOSIO_API_KEY", "LIMIT"]
    },
    
    "sdkdocs": {
      "dependsOn": ["^build", "sdkdocs:ts", "sdkdocs:python"],
      "outputs": ["pages/dist/sdk/**"],
      "cache": true
    },
    
    "sdkdocs:ts": {
      "dependsOn": ["^build"],
      "outputs": ["pages/dist/sdk/typescript/**"],
      "inputs": ["../ts/packages/core/**/*.ts", "../ts/packages/providers/**/*.ts", "typedoc.json"],
      "cache": true
    },
    
    "sdkdocs:python": {
      "dependsOn": ["^build"],
      "outputs": ["pages/dist/sdk/python/**"],
      "inputs": ["generators/python-sdk/templates/**/*.md", "generators/python-sdk/**/*.py"],
      "cache": true
    },
    
    "llms:build": {
      "outputs": ["llms-txt/public/llms.txt"],
      "inputs": ["docs.yml", "pages/**/*.mdx", "pages/**/*.md", "tools/**/*.mdx", "scripts/build-llms-txt.ts"],
      "cache": true
    },
    
    "llms:dev": {
      "persistent": true,
      "cache": false
    },
    
    "llms:deploy": {
      "dependsOn": ["llms:build"],
      "cache": false,
      "env": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
    },
    
    "check": {
      "dependsOn": ["snippets:build"],
      "cache": false
    },
    
    "links": {
      "dependsOn": ["snippets:build"],
      "cache": false
    },
    
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["FERN_TOKEN"]
    },
    
    "publish": {
      "dependsOn": ["build", "llms:deploy"],
      "cache": false,
      "env": ["FERN_TOKEN", "POSTHOG_API_KEY", "CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
    },
    
    "clean": {
      "cache": false
    },
    
    "compile": {
      "outputs": ["dist/output.css"],
      "inputs": ["assets/input.css", "tailwind.config.js"],
      "cache": true
    }
  }
}