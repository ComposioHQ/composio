    "test": "vitest run"
  },
  "keywords": [
    "composio",
    "provider",
    "anthropic"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.0",
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@composio/core": "0.4.0",
    "@mastra/mcp": "^0.12.0"
  },
  "devDependencies": {
    "@composio/core": "workspace:*",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
