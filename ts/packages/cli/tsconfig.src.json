{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.options.json",
  "references": [
    {
      "path": "../core"
    }
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "effect-errors/*": ["./src/effect-errors/*"]
    },
    "types": ["@types/bun"]
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["node_modules", "../../../node_modules", "**/dist", "test/__fixtures__/**"]
}
