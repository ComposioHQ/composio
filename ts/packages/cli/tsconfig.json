{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"],
      "~/*": ["./*"],
      "effect-errors/*": ["./src/effect-errors/*"]
    },
    "types": ["@types/bun", "vitest/importMeta"]
  },
  "include": ["src/**/*", "test/**/*", "scripts/**/*", "package.json"]
}
